@using CompnayWebsite_Models.Models;
@model Company
<style>
    .form-label {
        font-weight: bold;
    }

    .form-text {
        font-size: 0.9rem;
    }
</style>
<form method="post" asp-action="Create" asp-controller="Company" class="border p-3">
    <div class="form-group row">
        <div asp-validation-summary="ModelOnly"></div>
        <h2 class="text-info pl-3">Add Category</h2>
    </div>

    <div class="form-group">
        <label asp-for="CompanyName" class="form-label">Company Name</label>
        <input asp-for="CompanyName" class="form-control" placeholder="Enter Company Name">
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="form-label">Email address</label>
        <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter company email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter company phone">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Size" class="form-label">Size</label>
        <input asp-for="Size" class="form-control" placeholder="Enter company size">
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sector" class="form-label">Sector</label>
        <input asp-for="Sector" class="form-control" placeholder="Enter company sector">
        <span asp-validation-for="Sector" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


